{
  "name": "ynormals",
  "version": "1.0.0",
  "description": "Flip normal map channels with ease",
  "homepage": "https://github.com/darkbox/yNormals",
  "license": "GPL v3",
  "private": true,
  "author": {
  	"name": "Rafa G.M.",
  	"email": "rgtresd@gmail.com"
  },
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "dist": "build"
  },
  "build": {
  	"appId": "com.rgm.ynormals",
  	"win": {
  		"target": "nsis",
  		"icon": "assets/icons/yNormals_icon.ico"		
  	},
  	"linux": {
  		"target": ["appimage", "snap", "7z"],
  		"icon": "assets/icons/512x512.png",
  		"category": "Graphics",
  		"asar": false,
  		"files": ["!dist/*", "!builds/*"]
  	}
  },
  "keywords": [
    "normals",
    "map",
    "textures",
    "image",
    "manipulation",
    "edit"
  ],
  "author": "Rafa G.M.",
  "license": "MIT",
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "^20.38.5"
  },
  "dependencies": {
    "tippy.js": "^3.4.1"
  }
}
